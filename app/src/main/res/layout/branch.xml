<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/manigut_login">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/arrow_back_green" />


    <Spinner
        android:id="@+id/branchSpinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:prompt="@string/select_branch" />

    <TextView
        android:id="@+id/mokedName"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="290dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="שם המוקד"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/nextLesson"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginStart="185dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:text="כותב מערך לשבוע הבא:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/nextequip"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginStart="285dp"
        android:layout_marginTop="435dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="מביאי ציוד:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/returningequip"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginStart="290dp"
        android:layout_marginTop="335dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="מחזירי ציוד:"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:hint="הכנס שם"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editTextLesson"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="225dp"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:hint="Enter name"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editTextEquip"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:hint="הכנס שמות"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editTextRetEquip"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="460dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:hint="Enter something to be saved"
        android:textSize="20dp" />

    <Button
        android:id="@+id/savepref"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="555dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="30dp"
        android:text="save"
        android:layout_gravity="center_horizontal" />

</RelativeLayout>
